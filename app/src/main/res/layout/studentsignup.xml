<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/studentscrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:scrollbars="none"
    android:background="@drawable/bgtwo">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:orientation="vertical"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_picture"
            android:textSize="8pt"
            android:textColor="#ffffff"
            android:id="@+id/studentprofilepicture" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/studentprofilepictureview"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:src="@drawable/temppic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="#ffffff"
            android:text="@string/fname"
            android:id="@+id/studentfname" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="25"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/studentfnamefield"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="#ffffff"
            android:text="@string/lname"
            android:id="@+id/studentlname" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="25"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/studentlnamefield"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="#ffffff"
            android:text="@string/Username"
            android:id="@+id/studentusername" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="25"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/studentusernamefield"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="#ffffff"
            android:text="@string/email"
            android:id="@+id/studenttutoremail" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="25"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/studentemailfield"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Password"
            android:textSize="8pt"
            android:textColor="#ffffff"
            android:id="@+id/studentpasswordtext" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="25"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/studentpasswordtextfield"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="#ffffff"
            android:text="@string/passwordconfirm"
            android:id="@+id/studentpasswordconfirm" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="25"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/studentpasswordconfirmfield"
            android:textColor="#ffffff" />

        <com.dd.processbutton.iml.ActionProcessButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/submit"
            android:textColor="@android:color/white"
            custom:pb_colorComplete="@color/green_complete"
            custom:pb_colorNormal="#A96200"
            custom:pb_colorPressed="#804A00"
            custom:pb_colorProgress="@color/green_complete"
            custom:pb_textComplete="Success"
            custom:pb_textProgress="Loading..."
            custom:pb_textError="Error"
            custom:pb_colorError="@color/red_error"
            android:id="@+id/submitstudent"
            android:layout_marginBottom="67dp" />

    </LinearLayout>

</ScrollView>