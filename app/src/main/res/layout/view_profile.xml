<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:id="@+id/prof_name"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp" />

        <com.parse.ParseImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/prof_img"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Description:"
            android:id="@+id/prof_description"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textView3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Classes available to tutor"
            android:id="@+id/tutor_courses"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Reviews:"
                android:id="@+id/textView2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="999"
                android:id="@+id/review_count"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:layout_marginLeft="4dp" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/reliability_avg"
                android:layout_gravity="right|center_vertical"
                android:text="5.0" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="310dp"
                android:layout_height="11dp"
                android:id="@+id/reliability_prog"
                android:layout_gravity="left|center_vertical"
                android:progress="67"
                android:layout_margin="15dp"
                android:progressTint="#0d8602"
                android:progressBackgroundTint="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reliability:"
                android:id="@+id/textView6"
                android:layout_gravity="left|top"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:layout_marginBottom="3dp" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/friendlinesss_avg"
                android:layout_gravity="right|center_vertical"
                android:text="5.0" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="310dp"
                android:layout_height="11dp"
                android:id="@+id/friendlinesss_prog"
                android:layout_gravity="left|center_vertical"
                android:progress="67"
                android:layout_margin="15dp"
                android:progressTint="#0d8602"
                android:progressBackgroundTint="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friendliness:"
                android:id="@+id/textView5"
                android:layout_gravity="left|top"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:layout_marginBottom="3dp" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/knowledge_avg"
                android:layout_gravity="right|center_vertical"
                android:text="5.0" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="310dp"
                android:layout_height="11dp"
                android:id="@+id/knowledge_prog"
                android:layout_gravity="left|center_vertical"
                android:progress="67"
                android:layout_margin="15dp"
                android:progressTint="#0d8602"
                android:progressBackgroundTint="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Knowledge:"
                android:id="@+id/knowledgeLabel"
                android:layout_gravity="left|top"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:layout_marginBottom="3dp" />
        </FrameLayout>

    </LinearLayout>
</ScrollView>